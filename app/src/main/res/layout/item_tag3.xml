<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="#55ffff00"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="#44000000"
        android:includeFontPadding="false"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/iv_triangle"
        app:layout_constraintEnd_toEndOf="@+id/v_dot"
        app:layout_constraintStart_toStartOf="@+id/v_dot"
        tools:text="LipStick" />

    <ImageView
        android:id="@+id/iv_triangle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/triangle"
        app:layout_constraintBottom_toTopOf="@+id/v_dot"
        app:layout_constraintEnd_toEndOf="@+id/v_dot"
        app:layout_constraintStart_toStartOf="@+id/v_dot"
        app:tint="#44000000" />

    <View
        android:id="@+id/v_dot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_triangle" />

</androidx.constraintlayout.widget.ConstraintLayout>