        android:text="text1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:gravity="center_vertical"
        android:text="text1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
