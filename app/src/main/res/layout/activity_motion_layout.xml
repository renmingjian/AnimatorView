            android:layout_height="55dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_bills_payment_complete" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
