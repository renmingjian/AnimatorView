<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#14171D"
    android:orientation="vertical">

    <com.erge.animatorview.view.MultiImagesView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="#0000ff"
        android:visibility="gone"
        app:dividerSpace="5dp" />

    <ImageView
        android:id="@+id/iv_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:scaleType="fitStart"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.erge.animatorview.view.ChargeBgView
            android:id="@+id/chargeBgView"
            android:layout_width="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:rotationX="70"
            android:layout_marginEnd="50dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_car"
            android:layout_width="match_parent"
            android:src="@mipmap/car_ex_360"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <com.erge.animatorview.view.ChargeProgressView
        android:id="@+id/chargeView"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <Button
        android:id="@+id/button_charge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="开始" />


</LinearLayout>