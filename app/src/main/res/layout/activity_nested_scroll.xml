<?xml version="1.0" encoding="utf-8"?>
<com.erge.animatorview.view.nested.MyCustomNestedScrollingParent xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nestedparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/programmer" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff0000"
        android:gravity="center"
        android:text="我是标题"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</com.erge.animatorview.view.nested.MyCustomNestedScrollingParent>