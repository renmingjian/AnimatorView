<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LoadingView">
        <attr name="dotColor" format="color" />
        <attr name="dotRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LongClickView">
        <attr name="bgSrc" format="reference" />
        <attr name="src" format="reference" />
    </declare-styleable>

    <declare-styleable name="LoadingButton">
        <attr name="text" format="string" />
        <attr name="text_color" format="color" />
        <attr name="text_size" format="dimension" />
        <attr name="fill_color" format="color|reference" />
        <attr name="loading_line_color" format="color" />
        <attr name="corner_size" format="dimension" />
        <attr name="loading_line_size" format="dimension" />
        <attr name="gradientStyle" format="enum|string|reference">
            <enum name="left" value="0" />
            <enum name="middle" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CheckScoreView">
        <attr name="radius" format="dimension" />
        <attr name="out_layer_length" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ProgressLayoutView">
        <attr name="img" format="reference" />
        <attr name="imgWidth" format="dimension" />
        <attr name="imgHeight" format="dimension" />
        <attr name="desc" format="string" />
    </declare-styleable>

    <declare-styleable name="TabSwitchView">
        <attr name="tabMargin" format="dimension" />
        <attr name="indicatorHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MultiImagesView">
        <attr name="dividerSpace" format="dimension" />
    </declare-styleable>

    <declare-styleable name="VerticalRefreshLayout">
        <attr name="top_menu_scrollable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TagsLayout">
        <attr name="location_offset" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TriangleView">
        <attr name="triangle_fill_color" format="color|reference" />
    </declare-styleable>

</resources>